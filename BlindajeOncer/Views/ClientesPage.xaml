<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="BlindajeOncer.Views.ClientesPage">
    <ContentPage.Content>
        <StackLayout>
            <ScrollView>
                <StackLayout
            Padding="5">
                    <Image
                    Source="clientes.jpg"
                    WidthRequest="200">
                    </Image>
                    <Grid
                    Margin="10,0"
                    VerticalOptions="CenterAndExpand">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="Asesor"
                        VerticalOptions="Center">
                        </Label>
                        <Entry
                        Grid.Row="0"
                        Grid.Column="1"
                        Keyboard="Text"
                        Placeholder="Asignar Asesor">
                        </Entry>
                        <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="Nombre"
                        VerticalOptions="Center">
                        </Label>
                        <Entry
                        Grid.Row="0"
                        Grid.Column="1"
                        Keyboard="Text"
                        Placeholder="Ingresa Nombre del Cliente">
                        </Entry>
                        <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="Empresa"
                        VerticalOptions="Center">
                        </Label>
                        <Entry
                        Grid.Row="1"
                        Grid.Column="1"
                        Placeholder="Seleccionar Empresa">
                        </Entry>
                    </Grid>
                    <ActivityIndicator
                    IsRunning="{Binding IsRunning,Mode=TwoWay}"
                    VerticalOptions="CenterAndExpand">
                    </ActivityIndicator>
                    <StackLayout
                    Margin="35,0"
                    Orientation="Horizontal"
                    VerticalOptions="CenterAndExpand">
                        <Button
                        BackgroundColor="#90AFC5"
                        BorderRadius="23"
                        HeightRequest="46"
                        HorizontalOptions="FillAndExpand"
                        Text="Registrar"
                        TextColor="White">
                        </Button>
                        <Button
                        BackgroundColor="#336B87"
                        BorderRadius="23"
                        HeightRequest="46"
                        HorizontalOptions="FillAndExpand"
                        Text="Buscar"
                        TextColor="White">
                        </Button>
                    </StackLayout>
                    <StackLayout
                    Margin="35,0"
                    Orientation="Horizontal"
                    VerticalOptions="CenterAndExpand">
                        <Button
                        BackgroundColor="#2A3132"
                        BorderRadius="23"
                        HeightRequest="46"
                        HorizontalOptions="FillAndExpand"
                        Text="Actualizar"
                        TextColor="White">
                        </Button>
                        <Button
                        BackgroundColor="#763626"
                        BorderRadius="23"
                        HeightRequest="46"
                        HorizontalOptions="FillAndExpand"
                        Text="Eliminar"
                        TextColor="White">
                        </Button>
                    </StackLayout>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>